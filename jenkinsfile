pipeline { 
    agent any
    
    tools { 
        nodejs "20.3.1"
    }
    
    environment{
        APP_LINK = 'https://arcane-mountain-78765-54e042f045f6.herokuapp.com/'
    }
    
    stages { 
        stage('Clone repository') {
          steps { 
            git 'https://github.com/cynthia7125/gallery.git'
          }
        }
        
        stage('Install node modules') {
            steps { 
                sh 'npm i'
            }
        }
        
        stage('Test') {
            steps {
                script {
                    def testResult = sh returnStatus: true, script: 'npm run test' 

                    if (testResult != 0) {
                        emailext(
                            subject: "Failing tests",
                            body: "Tests have been run and have failed",
                            recipientProviders: [[$class: 'DevelopersRecipientProvider']],
                            to: "reyhana.kibet@student.moringaschool.com"
                        )
                    }
                }
            }
        }
        
        stage('Deploy to Heroku') {
            steps {
                script {
                    def herokuApp = 'arcane-mountain-78765' 
                    
                    withCredentials([[
                        $class: 'UsernamePasswordMultiBinding',
                        credentialsId: 'heroku',
                        usernameVariable: 'HEROKU_USERNAME',
                        passwordVariable: 'HEROKU_API_KEY'
                    ]]) {
                        sh "heroku login --username $HEROKU_USERNAME --password $HEROKU_API_KEY"
                        sh "git push https://git.heroku.com/$herokuApp.git HEAD:master"
                    }
                }
            }
        }
        
        stage('integration to slack'){
            steps {
                slackSend message: "Build number ${BUILD_NUMBER} | Job Name - ${JENKINS_URL} | Application Link: ${APP_LINK}"
                slackSend color: 'good', message: 'The gallery was deployed successfully and is running okay!'
            }
        }
    }
}